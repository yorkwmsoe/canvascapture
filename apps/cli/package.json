{
    "name": "canvas-capture-cli",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "scripts": {
        "test": "vitest",
        "test:cli": "vitest run",
        "test:ui": "vitest --ui",
        "coverage": "vitest run --coverage",
        "start": "bun run src/cli.ts",
        "build": "bun build --target=node src/cli.ts --outdir build",
        "lint": "eslint . --max-warnings=0",
        "lint:fix": "eslint . --fix",
        "package:win-x64": "bun build build/cli.js --compile --minify --target=bun-windows-x64 --outfile release/canvascapture-win-x64",
        "package:linux-x64": "bun build build/cli.js --compile --minify --target=bun-linux-x64 --outfile release/canvascapture-linux-x64",
        "package:linux-arm64": "bun build build/cli.js --compile --minify --target=bun-linux-arm64 --outfile release/canvascapture-linux-arm64",
        "package:macos-x64": "bun build build/cli.js --compile --minify ---target=bun-darwin-x64 -outfile release/canvascapture-macos-x64",
        "package:macos-arm64": "bun build build/cli.js --compile --minify --target=bun-darwin-arm64 --outfile release/canvascapture-macos-arm64"
    },
    "keywords": [],
    "author": "MSOE",
    "license": "UNLICENSED",
    "devDependencies": {
        "@types/figlet": "^1.5.8",
        "@types/gradient-string": "^1.1.5",
        "@types/inquirer": "^9.0.7",
        "@types/lodash": "^4.14.202",
        "@types/markdown-it": "^13.0.7",
        "@types/node": "^20.11.20",
        "@types/prompt-sync": "^4.2.3",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitest/coverage-v8": "^1.3.1",
        "@vitest/ui": "^1.3.1",
        "eslint": "^8.57.0",
        "typescript": "^5.3.3",
        "vite-tsconfig-paths": "^4.3.1",
        "vitest": "^1.3.1"
    },
    "dependencies": {
        "@canvas-capture/lib": "workspace:*",
        "@inquirer/prompts": "^3.3.2",
        "@inquirer/testing": "^2.1.11",
        "date-fns": "^2.30.0",
        "figlet": "^1.7.0",
        "gradient-string": "^2.0.2",
        "lodash": "^4.17.21",
        "markdown-it": "^14.0.0",
        "node-fetch": "^3.3.2",
        "pino": "^8.19.0",
        "prompt-sync": "^4.2.0",
        "pyodide": "^0.25.0",
        "zod": "^3.22.4"
    }
}
