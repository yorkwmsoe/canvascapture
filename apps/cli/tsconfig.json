{
    "compilerOptions": {
        "module": "ES2020",
        "esModuleInterop": true,
        "target": "ES2020",
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"],
            "@modules/*": ["./modules/*"],
            "@lib/*": ["./lib/*"],
            "@constants/*": ["./constants/*"]
        }
    },
    "exclude": ["vitest.config.ts", "node_modules"]
}
