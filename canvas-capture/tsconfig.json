{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "skipLibCheck": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "declaration": true,
        "outDir": "./dist",
    },
    "include": ["src/**/*"]
}
