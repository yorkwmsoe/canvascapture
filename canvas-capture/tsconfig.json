{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "skipLibCheck": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "declaration": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*"]
}
