{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "target": "ES2020",
        "sourceMap": true,
        "skipLibCheck": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowImportingTsExtensions": true,

        "declaration": true,
        "outDir": "./dist",
    },
    "include": ["src/**/*"]
}
