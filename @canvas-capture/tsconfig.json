{
    "compilerOptions": {
        "target": "es2015",
        "useDefineForClassFields": true,
        "module": "commonjs",
        "lib": ["es2015", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,

        /* Bundler mode */
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "declaration": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*"]
}
